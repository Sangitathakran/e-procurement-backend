{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@middlewares/*": [
                "./src/v1/middlewares/*"
            ],
            "@models/*": [
                "./src/v1/models/*"
            ],
            "@modules/*": [
                "./src/v1/modules/*"
            ],
            "@utils/*": [
                "./src/v1/utils/*"
            ],
            "@config/*": [
                "./config/*"
            ],
            "@views/*": [
                "./src/v1/views/*"
            ],
             "@common/*": [
                "./src/common/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}